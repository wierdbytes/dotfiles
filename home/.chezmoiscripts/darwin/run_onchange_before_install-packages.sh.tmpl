#!/bin/bash

set -eufo pipefail

brew tap FelixKratz/formulae

{{ $brews := list
     "eza"
     "sketchybar"
     "fzf"
     "lua"
     "switchaudio-osx"
     "nowplaying-cli"
     "jq" -}}
{{ $casks := list
     "karabiner-elements"
     "sf-symbols"
     "homebrew/cask-fonts/font-sf-mono"
     "homebrew/cask-fonts/font-sf-pro"
     "hammerspoon" -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
